<section id="@page.Id" style="position: relative; overflow: initial;" class="about page-section-ptb">
    <div class="container">
        @if (page.showStripes)
        {
            <div class="overlay-stripes">
                <img class="img-responsive" src="~/theme/moment-theme/Template/images/lines_full.png" />
            </div>
        }
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="section-title-1 text-center">
                    <h1 class="text-blue">@page.title</h1>
                    <div class="title-line"></div>
                    <p>@page.subTitle</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="custom-content">
                    <h3 class="text-blue">@page.contentTitle</h3>
                    <b>@page.contentSubTitle </b>
                    <div class="mt-30">
                        @page.htmlContent</div>
                    <a href="@buttonUrl" class="button mt-20">
                        <span>@buttonName</span>
                        <i class="fa fa-hand-o-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="js-video [youtube, widescreen]">
                    <iframe src="@page.videoUrl" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

