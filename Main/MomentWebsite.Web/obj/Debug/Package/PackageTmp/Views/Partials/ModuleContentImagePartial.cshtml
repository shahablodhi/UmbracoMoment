@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    var page = (dynamic)ViewBag.Page;

    <section id="@page.Id"  style="position: relative; overflow: initial;" class="our-office white-bg page-section-pt">
        <div class="container">
            @if (page.showStripes)
            {
                <div class="overlay-stripes">
                    <img class="img-responsive" src="~/theme/moment-theme/Template/images/lines_full.png" />
                </div>
            }
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="section-title-1 text-center">
                        <h1 class="text-blue">@page.title</h1>
                        <div class="title-line"></div>
                        <p>@page.subTitle</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 text-center">
                    <p>@page.htmlContent</p><br/>
                    <div class="blog-entry-slider">
                        <div class="owl-carousel-6">
                            @if (page.HasProperty("image"))
                            {
                                foreach (var imageId in page.image)
                                {
                                    var dynamicMediaItem = Umbraco.Media(imageId.ToString());
                                    var image = dynamicMediaItem.umbracoFile;
                                    <div class="item">
                                        <img src="@image" alt="">
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
