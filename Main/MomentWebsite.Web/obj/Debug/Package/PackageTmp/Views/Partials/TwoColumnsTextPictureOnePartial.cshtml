@using MomentWebsite.Web.Business
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var page = (dynamic)ViewBag.Page;
    var theme = page.selectTheme;
}

@{
    var selectedTheme = Utility.GetThemeColorMap(theme);
}
<!--=================================
 About-->

<section style="position: relative; overflow: initial;background:@(selectedTheme==1?"#FCD2AC":selectedTheme==2?"#F15A23":selectedTheme==3?"#E2E2E2":selectedTheme==4?"#383838":page.backColorCode)" id="@page.Id" class="about page-section-ptb">
    <div class="container">
        @if (page.showStripes)
        {
            <div class="overlay-stripes">
                <img class="img-responsive" src="~/theme/moment-theme/Template/images/lines_full.png" />
            </div>
        }
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="section-title-1 text-center">
                    <h1 class="text-blue">@page.title</h1>
                    <div class="title-line"></div>
                    <p>@page.subTitle</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="who-we-are-right">
                    <h3 class="text-blue mb-20">@page.heading</h3>
                    @page.htmlContent
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="who-we-are-left">
                    <div class="owl-carousel-2">
                        @foreach (var imageId in page.images)
                        {
                            var dynamicMediaItem = Umbraco.Media(imageId.ToString());
                            var image = dynamicMediaItem.umbracoFile;
                            <div class="item">
                                <img src="@image" alt="">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

