@using MomentWebsite.Web.Business;
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var page = (dynamic)ViewBag.Page;
    var counter = 0;
    var theme = page.selectTheme;
}


@{
    var selectedTheme = Utility.GetThemeColorMap(theme);

}


<!--=================================
key-features -->

<section style="position: relative; overflow: initial;background:@(selectedTheme==1?"#FCD2AC":selectedTheme==2?"#F15A23":selectedTheme==3?"#E2E2E2":selectedTheme==4?"#383838":page.backColorCode)" id="@page.Id" class="key-features white-bg page-section-ptb">
    <div class="container">
        @if (page.showStripes)
        {
            <div class="overlay-stripes">
                <img class="img-responsive" src="~/theme/moment-theme/Template/images/lines_full.png" />
            </div>
        }
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="section-title-2 text-center">
                    <h2 class="">@page.title</h2>
                    <div class="title-line"></div>
                    <p>@page.subTitle</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var box in page.boxContent)
            {

                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="feature-10 text-center mb-30 wow fadeInUp" data-wow-delay="0.2s" data-wow-duration="1.5s ">
                        <span class="@box.icon" aria-hidden="true"></span>
                        <h4 class="text-back pt-20 pb-10">@box.title</h4>
                        <p>@box.text</p>
                    </div>
                </div>
                counter++;
                if (counter >= 3)
                {
                    counter = 0;
                    break;
                }
            }

        </div>
        <div class="row">
            @foreach (var box in page.boxContent)
            {

                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="feature-10 text-center mb-30 wow fadeInUp" data-wow-delay="0.2s" data-wow-duration="1.5s ">
                        <span class="@box.icon" aria-hidden="true"></span>
                        <h4 class="text-back pt-20 pb-10">@box.title</h4>
                        <p>@box.text</p>
                    </div>
                </div>
                counter++;
                if (counter >= 3)
                {
                    counter = 0;
                    break;
                }
            }
        </div>
    </div>
</section>

