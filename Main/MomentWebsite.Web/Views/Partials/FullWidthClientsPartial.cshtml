@using MomentWebsite.Web.Business
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var page = (dynamic)ViewBag.Page;
    var counter = 1;
    const String tab = "tab";
    var theme = page.selectTheme;
}

@{
    var selectedTheme = Utility.GetThemeColorMap(theme);

}
<!--=================================
 About-->

<section style="position: relative; overflow: initial;background:@(selectedTheme==1?"#FCD2AC":selectedTheme==2?"#F15A23":selectedTheme==3?"#E2E2E2":selectedTheme==4?"#383838":page.backColorCode)" id="@page.Id" class="happy-clients white-bg page-section-ptb">
    <div class="container">
        @if (page.showStripes)
        {
            <div class="overlay-stripes">
                <img class="img-responsive" src="~/theme/moment-theme/Template/images/lines_full.png" />
            </div>
        }
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="section-title-2 text-center">
                    <h3 class="text-blue">@page.title</h3>
                    <div class="title-line"></div>
                    <p>@page.subTitle</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div id="tabs">
                    @foreach (var content in page.tabContent)
                    {
                        <div id="@(tab + counter)" class="tabcontent">
                            <p>@content.text</p>
                        </div>
                        counter++;
                    }
                    @{ counter = 1; }
                    <ul class="tabs">
                        @foreach (var content in page.tabContent)
                        {
                            <li data-tabs="@(tab + counter)" class="animated-arrow @(counter == 1 ? "active" : "") "> <img class="img-responsive" src="@Umbraco.Media(content.image.ToString()).umbracoFile" alt=""></li>
                            counter++;
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

