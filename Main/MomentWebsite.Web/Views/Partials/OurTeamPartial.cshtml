@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var page = (dynamic)ViewBag.Page;
    var counter = 1;
}
<!--=================================
 our-Team -->

<section id="@page.Id" style="position: relative; overflow: initial;" class="white-bg page-section-pb">
    <div class="container">
        @if (page.showStripes)
        {
            <div class="overlay-stripes">
                <img class="img-responsive" src="~/theme/moment-theme/Template/images/lines_full.png" />
            </div>
        }
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="section-title-1 text-center">
                    <h1 class="text-blue">@page.title</h1>
                    <div class="title-line"></div>
                    <p>@page.subTitle</p>
                </div>
            </div>
        </div>
        <div class="team-2">
            <div class="row">
                @foreach (var box in page.boxes)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-sm-12">
                        <div class="team-2-box">
                            <img class="img-responsive" src="@Umbraco.Media(box.image.ToString()).umbracoFile" alt="">
                            <div class="team-overlay text-center">
                                <div class="info">
                                    <h5 class="text-white">@box.title</h5>
                                    <span>@box.subTitle</span>
                                </div>
                                <div class="social">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                        <li> <a href="#"><i class="fa fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                        <li><a href="#"><i class="fa fa-vimeo"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    if (counter >= 4)
                    {
                        @:</div>
                        @:<br/>
                        @:<div class="row">
                        counter = 0;
                    }
                    counter++;
                }
            @if (counter != 5)
            {
                @:</div>
            }
            </div>
        </div>
</section>

