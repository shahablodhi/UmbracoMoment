@using System.Collections
@using System.Web.Http.Controllers
@using MomentWebsite.Web.Controllers
@inherits UmbracoViewPage
    @{
        var page = (dynamic)ViewBag.Page;
        var list = UtilityController.GetConcreteGroupedList(page.fAQContent);
        var counter = 1;
}
<!--=================================
