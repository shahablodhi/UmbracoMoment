@using MomentWebsite.Web.Business;
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var page = (dynamic)ViewBag.Page;
    var counter = 0;
    var theme = page.selectTheme;
}


@{
    var selectedTheme = Utility.GetThemeColorMap(theme); 

}

<section style="position: relative; overflow: initial;background:@(selectedTheme==1?"#FCD2AC":selectedTheme==2?"#F15A23":selectedTheme==3?"#E2E2E2":selectedTheme==4?"#383838":page.backColorCode)" id="@page.Id" class="service white-bg page-section-ptb">
    <div class="container">
        @if (page.showStripes)
        {
            <div class="overlay-stripes">
                <img class="img-responsive" src="~/theme/moment-theme/Template/images/lines_full.png" />
            </div>
        }
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="section-title-1 text-center">
                    <h2 class="">@page.title</h2>
                    <div class="title-line"></div>
                    <p>@page.subTitle</p>
                </div>
            </div>
        </div>
        <!-- =========================================== -->
        <div class="row">
            @foreach (var box in page.boxContent)
            {
                <div class="col-lg-3 col-md-3 col-sm-6">
                    <div class="feature-11 text-center clearfix">
                        <div class="feature-11-icon mb-30">
                            <span class="@box.icon icon-paper-clip" aria-hidden="true"></span>
                        </div>
                        <div class="feature-11-info">
                            <h5 class="pb-20">@box.title</h5>
                            <p>@box.text</p>
                        </div>
                    </div>
                </div>
                counter++;
                if (counter >= 4)
                {
                    counter = 0;
                    break;
                }
            }
        </div><br/><br/>
        <!-- =========================================== -->
        <div class="row">
            @foreach (var box in page.boxContent)
            {
                <div class="col-lg-3 col-md-3 col-sm-6">
                    <div class="feature-11 text-center clearfix">
                        <div class="feature-11-icon mb-30">
                            <span class="@box.icon " aria-hidden="true"></span>
                        </div>
                        <div class="feature-11-info">
                            <h5 class="pb-20">@box.title</h5>
                            <p>@box.text</p>
                        </div>
                    </div>
                </div>
                counter++;
                if (counter >= 4)
                {
                    break;
                }
            }
        </div>
    </div>
</section>
