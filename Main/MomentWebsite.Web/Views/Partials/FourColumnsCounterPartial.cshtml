@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var page = (dynamic) ViewBag.Page;
}
<style>
    .bg-6 {
   background: url('@Umbraco.Media(page.backgroundImage.ToString()).umbracoFile');
    background-clip: initial;
    background-color: rgba(0, 0, 0, 0);
    background-origin: initial;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover !important;
    position: relative;
    z-index: 0;
    background-attachment: fixed; 
    }
</style>
<section id="@page.Id" style="position: relative; overflow: initial;" class="counter-main bg-6 bg-opacity-black-70 page-section-ptb">
    <div class="container">
        @if (page.showStripes)
        {
            <div class="overlay-stripes">
                <img class="img-responsive" src="~/theme/moment-theme/Template/images/lines_full.png" />
            </div>
        }
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center mt-30">
                <span class="@page.icon1 text-white" aria-hidden="true"></span>
                <b style="font-size: 24pt;" class="timer" data-to="@page.count1" data-speed="10000"></b>
                <h5 style="font-size: 16pt;" class="text-white Graphik-Regular-Web">@page.underText1</h5>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center mt-30">
                <span class="@page.icon2 text-white" aria-hidden="true"></span>
                <b style="font-size: 24pt;" class="timer" data-to="@page.count2" data-speed="10000"></b>
                <h5 style="font-size: 16pt;" class="text-white Graphik-Regular-Web">@page.underText2</h5>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center mt-30">
                <span class="@page.icon3 text-white" aria-hidden="true"></span>
                <b style="font-size: 24pt;" class="timer" data-to="@page.count3" data-speed="10000"></b>
                <h5 style="font-size: 16pt;" class="text-white Graphik-Regular-Webe">@page.underText3</h5>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center mt-30">
                <span class="@page.icon4 text-white" aria-hidden="true"></span>
                <b style="font-size: 24pt;" class="timer" data-to="@page.count4" data-speed="10000"></b>
                <h5 style="font-size: 16pt;" class="text-white Graphik-Regular-Web">@page.underText4</h5>
            </div>
        </div>
    </div>
</section>
